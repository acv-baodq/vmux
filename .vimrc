"" Basic config
set ttm=100 " Don't wait when doing <Esc>O, ttimeoutlen
set nocompatible
filetype off
filetype plugin indent on  
set noswapfile
syntax on
set hidden
set ruler
set scrolloff=8
"" Indent
set autoindent 
set expandtab    
set smarttab    
set softtabstop=2
set shiftwidth =2
set laststatus=2
"" Search
set path+=**
set ignorecase
set incsearch
set wildmenu
set wildmode=list:full
set wildignore+=tmp/**

